<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_tentang"
    android:background="@drawable/bg1"
    tools:context="com.android.rumahsakitsemen.Activity.PengumumanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Pengumuman Rumah Sakit Semen Gresik"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="15dp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo_rs1"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Rumah sakit Semen Gresik Merupakan salah satu rumah sakit yang cukup terkenal di kota gresik. Rumah sakit ini mempunya sejarah yang cukup panjang. Unit Balai Pengobatan Semen Gresik didirikan tahun 1962, ikelola secara langsung di bawah manajemen PT Semen Gresik dengan tugas pokok memelihara kesehatan karyawan PT Semen Gresik dan keluarganya. Unit inilah yang menjadi cikal bakal Rumah Sakit Semen Gresik."
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="15dp"/>

    </LinearLayout>
</LinearLayout>

