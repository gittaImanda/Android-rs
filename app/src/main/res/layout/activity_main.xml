<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.rumahsakitsemen.Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg1"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@drawable/rumah_sakit">

            <!--<LinearLayout-->
            <!--android:id="@+id/settings"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_margin="15dp">-->

            <!--<ImageButton-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:srcCompat="@drawable/settings"-->
            <!--android:background="@android:color/transparent"/>-->
            <!--</LinearLayout>-->

            <TextView
                android:id="@+id/klinik_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Rumah Sakit Semen Gresik"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:padding="10dp"
                android:gravity="center"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2sp"
            app:srcCompat="@drawable/blue" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="11dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:elevation="@dimen/cardview_default_elevation"
                        app:cardCornerRadius="@dimen/cardview_default_radius">

                        <LinearLayout
                            android:id="@+id/daftar_layanan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/registrasi" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal"
                                android:text="Pendaftaran Pemeriksaan"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:elevation="@dimen/cardview_default_elevation"
                        app:cardCornerRadius="@dimen/cardview_default_radius">

                        <LinearLayout
                            android:id="@+id/daftar_poli"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_marginTop="5dp"
                                app:srcCompat="@drawable/daftar_poli" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal"
                                android:text="Daftar Poli"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:elevation="@dimen/cardview_default_elevation"
                        app:cardCornerRadius="@dimen/cardview_default_radius">

                        <LinearLayout
                            android:id="@+id/panduan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                app:srcCompat="@drawable/orangAntri" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:gravity="center_horizontal"
                                android:text="Info Antrian"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:elevation="@dimen/cardview_default_elevation"
                        app:cardCornerRadius="@dimen/cardview_default_radius">

                        <LinearLayout
                            android:id="@+id/pengumuman"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:src="@drawable/pengumuman" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:gravity="center_horizontal"
                                android:text="Pengumuman"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:elevation="@dimen/cardview_default_elevation"
                        app:cardCornerRadius="@dimen/cardview_default_radius">

                        <LinearLayout
                            android:id="@+id/cs"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="75dp"
                                android:layout_height="55dp"
                                app:srcCompat="@drawable/cs" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:gravity="center_horizontal"
                                android:text="Info Layanan"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:elevation="@dimen/cardview_default_elevation"
                        app:cardCornerRadius="@dimen/cardview_default_radius">

                        <LinearLayout
                            android:id="@+id/profil"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="55dp"
                                app:srcCompat="@drawable/user" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:gravity="center_horizontal"
                                android:text="Profil"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
