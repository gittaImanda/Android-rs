<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/activity_detail_antrian"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.android.rumahsakitsemen.Activity.DetailAntrianActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    android:weightSum="3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BUKTI PENDAFTARAN"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="21sp"
        android:paddingTop="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="RS Semen Gresik"
        android:gravity="center"
        android:textSize="19sp"
        android:paddingTop="10dp"/>

    <TextView
        android:id="@+id/poliTujuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="POLI TUJUAN"
        android:gravity="center"
        android:textSize="20sp"
        android:paddingTop="30dp"/>

    <TextView
        android:id="@+id/nmrUrutan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="30sp"
        android:paddingTop="20dp"/>

    <TextView
        android:id="@+id/nomorKartu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No. Kartu : 1234"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="17sp"
        android:paddingTop="30dp"/>

    <TextView
        android:id="@+id/namaPasien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="Nama Pasien"
        android:gravity="center"
        android:textSize="17sp"
        android:paddingTop="13dp"/>

    <TextView
        android:id="@+id/tglPeriksa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="Hadir Pada : 10 - 05 - 2019"
        android:gravity="center"
        android:textSize="17sp"
        android:paddingTop="13dp"/>

    <TextView
        android:id="@+id/jadwalPeriksa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jadwal : 09.00 pagi"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="17sp"
        android:paddingTop="13dp"/>
</LinearLayout>
</LinearLayout>